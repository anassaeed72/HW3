-# This file is app/view/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th=link_to "Movie Title" ,"/movies?sort_by=title"
      %th Rating
      %th=link_to "Release Date","/movies?sort_by=rDate"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie) 
    = form_tag movies_path, :method => :get do
      Include: <br>
      - @all_ratings.each do |rating|
        = rating
        = check_box_tag "ratings[#{rating}]" ,true,true     
        <br>    
      = submit_tag 'Refresh'
    
= link_to 'Add new movie', new_movie_path

